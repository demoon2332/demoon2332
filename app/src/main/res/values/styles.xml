<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="board">

    </style>

    <style name="customButton" parent="@style/Widget.AppCompat.Button.Borderless">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36dp</item>
        <item name="buttonStyle">@color/teal_200</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="input">
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginBottom">116dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">36dp</item>

    </style>

    <style name="backspace">
        <item name="android:capitalize">characters</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonStyle">@color/teal_200</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="srcCompat">@drawable/backspace</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>

    </style>
    <style name="result">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">36dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginStart">5dp</item>

        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
    </style>



</resources>

















